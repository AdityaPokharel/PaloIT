<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Count My Zeros</title>
        <link rel="stylesheet" href="assets/css/style.css">
        <script type="text/javascript" src="assets/js/lib/script.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet">
        <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    </head>
    <body>
        <div id="container">
            <h1>Count Zeros</h1>
            <% if (typeof errorMessage != 'undefined') { %>
                <p><%= errorMessage %></p>
            <% } %>
            <form class="ui form" action="/names" method="POST">
                    <input type="text" name="name[firstName]" placeholder="First Name"> 
                    <input type="text" name="name[lastName]" placeholder="Last Name">
                <button type="submit">Submit</button>
            </form>
                
            <ul>
                <% names.forEach((name) => { %>
                    <li><%= name.fullName %> - <%= name.zeroCount %></li>
                <% }); %>
            </ul>
        </div>
        
        <script type="text/javascript" src="assets/js/script.js"></script>
    </body>
</html>